{
  "terminal.integrated.profiles.osx": {
    "bash": {
      "path": "/bin/bash",
      "args": ["-c", "${workspaceFolder}/scripts/track-history.bash; exec bash"]
    },
    "fish": {
      "path": "/usr/local/bin/fish",
      // executes command to source the script before going interactive
      "args": ["-C", "source ${workspaceFolder}/scripts/track-history.fish"]
    }
  },
  "gitlens.views.commits.files.layout": "tree",
  "files.exclude": {
    "**/*.vo": true,
    "**/*.vok": true,
    "**/*.vos": true,
    "**/*.aux": true,
    "**/*.glob": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true
  }
}
